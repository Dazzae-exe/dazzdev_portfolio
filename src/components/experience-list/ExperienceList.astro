---
import Card from "../card/Card.astro"

const experienceList = [
  {
    title: 'Katavi Gaming Limited',
    description: 'Worked on various gaming-betting projects, focusing on user experience and interface design.',
    lang: ['Svelte', 'Angular 2', 'JavaScript'],
    url: 'https://tbet.co.tz'
  },
  {
    title: 'VediaGames',
    description: 'Support developing and maintaining gaming applications, enhancing performance and user experience for a freelancing client.',
    lang: ['Svelte', 'TypeScript', 'Storybook'],
    url: 'https://vediagames.com'
  },
  {
    title: 'Chicks Gold',
    description: 'Developed and maintained a web application for an online videogames assets trading company, focusing on performance and user experience.',
    lang: ['Svelte', 'Aurelia 1', 'Aurelia 2', 'TypeScript', 'JavaScript', 'C#'],
    url: 'https://chicksgold.com'
  }
]
---

<section class="relative w-full h-full flex flex-col space-y-5">
  <h2 class="text-5xl font-bold">Professional experience</h2>

  <ul class="relative w-full grid grid-cols-1 md:grid-cols-2 gap-4">
    {experienceList.map(experience => (
      <li>
        <Card title={experience.title} description={experience.description} lang={experience.lang} url={experience.url} />
      </li>
    ))}
  </ul>
</section>
